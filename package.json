{
  "name": "socx-backend",
  "version": "1.0.0",
  "description": "Professional Node.js backend with secure authentication",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run frontend:dev\"",
    "frontend:dev": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "test": "jest",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "setup": "npm install && cd frontend && npm install",
    "build": "npm run frontend:build"
  },
  "keywords": [
    "nodejs",
    "express",
    "authentication",
    "mysql",
    "jwt",
    "security"
  ],
  "author": "Socx Development Team",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "winston": "^3.11.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
