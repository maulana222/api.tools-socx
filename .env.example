# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=socx_database
DB_PORT=3306

# JWT Configuration
# Generate new secrets for production using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=VDl3&qY-SPk7bI#!yde4*+0TvXhNG6s$ogUWEB@FuwxzOtmZjQic8KAHnMp%?2CL
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=TZUp50rauBCfHVt#4PLR*O3h+K!68sxwDz&JkQ9Ainej%IMmN2qv1dYSW-EX?7l@
JWT_REFRESH_EXPIRE=30d

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
# Auth endpoints: 5 attempts per 15 minutes
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# API endpoints: 100 requests per 15 minutes
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Password reset: 3 attempts per hour
PASSWORD_RESET_RATE_LIMIT_WINDOW_MS=3600000
PASSWORD_RESET_RATE_LIMIT_MAX_REQUESTS=3

# CORS Configuration
# Multiple origins can be separated by commas
CORS_ORIGIN=http://localhost:9899,http://localhost:3000

# IP Configuration
# Trusted IPs that bypass rate limiting (comma-separated)
TRUSTED_IPS=

# Blocked IPs (comma-separated)
BLOCKED_IPS=

# Request Size Limit (in bytes, default: 10MB)
MAX_REQUEST_SIZE=10485760

# Security Headers
# Set to 'true' in production to enable HSTS preloading
ENABLE_HSTS_PRELOAD=false

# Token Blacklist
# Cleanup interval in milliseconds (default: 1 hour)
BLACKLIST_CLEANUP_INTERVAL=3600000

# Password Requirements
PASSWORD_MIN_LENGTH=12
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_SPECIAL_CHAR=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true

# Session Management
# Enable token rotation on refresh
ENABLE_TOKEN_ROTATION=true

# Security Logging
# Log all authentication attempts
LOG_AUTH_ATTEMPTS=true

# Log all API requests
LOG_API_REQUESTS=true

# Log sensitive data (set to false in production)
LOG_SENSITIVE_DATA=false
